function getProducts() {
   global $db;
   global $database;

   $sql = "SELECT * FROM product";
   try {
      $stmt = $db->prepare($sql);
      $stmt->execute();
      $result = $stmt->fetchAll();
      $stmt->closeCursor();
      return $result;
   }
   catch (PDOException $exc) {
      return '0';
   }
}

$products = getProducts();
