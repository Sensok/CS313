<?php

include('sqlfunc.php');

include('process.php');

$products = getSpecies();

$widths = getWidths();

$mills = getMills();

$grade = getGrades();

?>
<!doctype html>
<html>
<head>
<meta charset="UTF-8">
   <title>RR HARDWOOD PRODUCTS</title>
   </head>

   <body>
   <form method="post">
      <select name="species">
      <?php
   foreach ($products as $s) {
   echo '<option value="' . $s['species_id'] . '">' . $s['spec_ldec'] . '</option>';
      }
      ?>
      </select>
      <select name="width">
      <?php
   foreach ($widths as $w) {
   echo '<option value="' . $w['id'] . '">' . $w['mWidth'] . '</option>';
      }
      ?>
      </select>
   <select name="mill">
   <?php
   foreach ($mills as $m) {
   echo '<option  value="' . $m['mill_id'] . '">' . $m['short_dec'] . '</option>';
   }
   ?>
    </select>
   <select name="grade">
   <?php
   foreach ($grade as $g) {
   echo '<option value="' . $g['id'] . '">' . $g['grade'] . '</option>';
   }
   ?>
    </select>

    Amount Ordered: <input type="text" name="amt"/>
    Base Price: <input type="text" name="basep"/>
    <input type="hidden" name="action" value="new-product">
   <input type="submit" value="Insert Product">
   </form>

</body>
</html>